(declare-fun test ((_ BitVec 4)) Bool)

(assert (= (test #x0) (= (bvadd #b1111 #b0010) #b0001)))
(assert (= (test #x1) (= (bvneg #b01) #b11)))
(assert (= (test #x2) (= (concat #b01 #b10 #b11) #b011011)))
(assert (= (test #x3) (= ((_ extract 3 1) #b011011) #b101)))
(assert (= (test #x4) (= (bvmul #b1110 #b0010) #b1100)))
; no support for constant bit-shifts yet - we don't have a way to convert from bigints to i64
; (assert (= (test #x5) (= (bvshl #b1100 #b0010) #b0000)))
; (assert (= (test #x6) (= (bvlshr #b1100 #b0001) #b0110)))
(assert (= (test #x7) (= ((_ rotate_left 3) #b10100001) #b00001101)))
(assert (= (test #x8) (= ((_ rotate_right 3) #b10100001) #b00110100)))
(assert (= (test #x9) (bvugt #b01 #b00)))
(assert (= (test #xa) (bvsgt #b01 #b00)))
(assert (= (test #xb) (bvuge #b01 #b00)))
(assert (= (test #xc) (bvuge #b10 #b10)))
(assert (= (test #xd) (bvsgt #b00 #b10)))
(assert (= (test #xe) (bvsge #b00 #b10)))
(assert (= (test #xf) (bvsge #b10 #b10)))

(assert (not (and (test #x0) (test #x1) (test #x2) (test #x3) (test #x4) (test #x7) (test #x8) (test #x9) (test #xa) (test #xb) (test #xc) (test #xd) (test #xe) (test #xf))))
(check-sat)
